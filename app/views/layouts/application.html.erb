<!DOCTYPE html>
<html>
<head>
  <title>Opus</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "jquery.rotate" %>
  <%= javascript_include_tag "forms" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id='gray_border'>
    <div id='matrix'>
      <div id='left_lines'>
        <div id='left_pink'></div>
        <div id='left_purple'></div>
      </div>
      <p>DOT MATRIX WITH STEREO SOUND</p>
      <div id='right_lines'>
        <div id='right_pink'></div>
        <div id='right_purple'></div>
      </div>
    </div>
    <div id='battery'>
      <div id='battery_indicator'></div>
      <p>BATTERY</p>
    </div>
    <div id='main'>
      <%= render 'layouts/errors' %>
      <%= yield %>
    </div>
  </div>
</body>
</html>
