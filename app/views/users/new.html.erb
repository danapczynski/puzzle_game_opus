<div id='new-user-form' class='form-div'>
  <h3>Create a User</h3>
  <%= form_for @user do |t| %>
    <%= t.label :name %>
    <%= t.text_field :name %>
    <%= t.label :email %>
    <%= t.text_field :email %>
    <%= t.label :password %>
    <%= t.password_field :password %>
    <%= t.label :password_confirmation %>
    <%= t.password_field :password_confirmation %>
    <%= t.submit 'Done', remote: true, id: 'submit-new_user-button', class: 'submit-button' %>
  <% end %>
  <%= link_to "Go Back", root_path, class: 'button' %>
</div>