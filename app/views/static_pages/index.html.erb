
<div id='sign-in-form'>
  <% if logged_in? %>
    <h3>Welcome, <%= link_to current_user.name, user_path(current_user), :id => 'user_greeting' %>!</h3>
    <%= link_to "Sign Out", '/signout', :method => :delete, :id => 'signout' %>
  <% else %>
    <h3>Sign In</h3>
    <%= form_tag sessions_path, id: 'login_form' do %>
      <%= text_field_tag(:email, nil, placeholder: "Email") %>
      <%= text_field_tag(:password, nil, placeholder: "Password", type: 'password') %>
    <% end %>
    <%= link_to "Sign In", '/login', id: 'sign-in-button', class: 'button' %>
    <%= link_to "Create a new user", new_user_path, id: 'create-user-button', class: 'button' %>
  <% end %>
</div>  