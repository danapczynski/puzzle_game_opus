<div id='sign-in-form' class='form-div'>
  <h3>Sign In</h3>
  <%= form_tag sessions_path, id: 'login_form' do %>
    <%= label_tag(:email, 'Email:') %>
    <%= text_field_tag(:email, nil) %>
    <%= label_tag(:password, 'Password:') %>
    <%= text_field_tag(:password, nil, type: 'password') %>
  <% end %>
  <%= link_to "Done", '/login', id: 'sign-in-button', class: 'button' %>
  <%= link_to "Create a new user", new_user_path, id: 'create-user-button', class: 'button' %>
</div>  